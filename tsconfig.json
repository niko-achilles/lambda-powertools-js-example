{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./dist"]
}
